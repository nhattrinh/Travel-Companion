# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=4

# Model Configuration
MODEL_OCR_CONFIDENCE_THRESHOLD=0.5
MODEL_OCR_MAX_IMAGE_SIZE_MB=20
MODEL_TRANSLATION_BATCH_SIZE=64
MODEL_TRANSLATION_TIMEOUT_SECONDS=60

# Concurrency Configuration
CONCURRENCY_MAX_CONCURRENT_REQUESTS=25
CONCURRENCY_QUEUE_TIMEOUT_SECONDS=60
CONCURRENCY_PROCESSING_TIMEOUT_SECONDS=300
CONCURRENCY_MEMORY_LIMIT_MB=2048
CONCURRENCY_MAX_BATCH_SIZE=10

# Redis Configuration
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_CACHE_TTL_SECONDS=7200

# Security Configuration
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=60
SECURITY_CORS_ORIGINS=https://menuapp.com,https://admin.menuapp.com

# Food Image Service Configuration
FOOD_IMAGE_SERVICE_URL=https://api.foodimages.com
FOOD_IMAGE_MAX_IMAGES_PER_ITEM=5
FOOD_IMAGE_SEARCH_TIMEOUT_SECONDS=20
FOOD_IMAGE_CACHE_ENABLED=true

# Storage Configuration
TEMP_STORAGE_PATH=/app/temp
MAX_TEMP_FILE_AGE_HOURS=6
CLEANUP_INTERVAL_MINUTES=15

# Logging Configuration
LOG_FILE=/app/logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days