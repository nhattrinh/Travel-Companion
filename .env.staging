# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=2

# Model Configuration
MODEL_OCR_CONFIDENCE_THRESHOLD=0.4
MODEL_OCR_MAX_IMAGE_SIZE_MB=15
MODEL_TRANSLATION_BATCH_SIZE=32
MODEL_TRANSLATION_TIMEOUT_SECONDS=45

# Concurrency Configuration
CONCURRENCY_MAX_CONCURRENT_REQUESTS=15
CONCURRENCY_QUEUE_TIMEOUT_SECONDS=45
CONCURRENCY_PROCESSING_TIMEOUT_SECONDS=180
CONCURRENCY_MEMORY_LIMIT_MB=1024
CONCURRENCY_MAX_BATCH_SIZE=8

# Redis Configuration
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_CACHE_TTL_SECONDS=3600

# Security Configuration
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_CORS_ORIGINS=https://staging.menuapp.com,https://staging-admin.menuapp.com

# Food Image Service Configuration
FOOD_IMAGE_SERVICE_URL=https://api.foodimages.com
FOOD_IMAGE_MAX_IMAGES_PER_ITEM=5
FOOD_IMAGE_SEARCH_TIMEOUT_SECONDS=15
FOOD_IMAGE_CACHE_ENABLED=true

# Storage Configuration
TEMP_STORAGE_PATH=/app/temp
MAX_TEMP_FILE_AGE_HOURS=12
CLEANUP_INTERVAL_MINUTES=30

# Logging Configuration
LOG_FILE=/app/logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days